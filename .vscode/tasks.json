{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--bin",
				"server"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "run server"
		},
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--bin",
				"client"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "run client"
		},
		{
			"label": "run both",
			"dependsOrder": "parallel",
			"dependsOn": [
				"run server",
				"run client"
			],
			
			"problemMatcher": []
		}
	]
}